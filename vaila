  <script>
    function proximaPagina(pagina) {
      const allPages = document.querySelectorAll('.page');
      allPages.forEach(p => p.classList.remove('active'));
      const target = document.getElementById(`page${pagina}`);
      if (target) target.classList.add('active');
    }

    function gerarSolucoes() {
      const lista = document.getElementById('listaSolucoes');
      lista.innerHTML = '';

      if (document.getElementById('flag1').checked)
        lista.innerHTML += '<li>‚úîÔ∏è A Lavieen e o Ultraformer cobrem mais de 80% dos procedimentos buscados em est√©tica avan√ßada.</li>';

      if (document.getElementById('flag2').checked)
        lista.innerHTML += '<li>üìà Crie pacotes lucrativos com margem acima de 70% usando nossas tecnologias.</li>';

      if (document.getElementById('flag3').checked)
        lista.innerHTML += '<li>üèÜ Destaque-se da concorr√™ncia com exclusividade e inova√ß√£o tecnol√≥gica.</li>';

      if (document.getElementById('flag4').checked)
        lista.innerHTML += '<li>üí∞ Escale seus lucros sem contratar mais pessoal com protocolos automatizados.</li>';

      if (lista.innerHTML === '')
        lista.innerHTML = '<li>üöÄ A inova√ß√£o √© o pr√≥ximo passo para o seu crescimento. Vamos juntos?</li>';
    }

    function calcularROI() {
      const vLav = parseFloat(document.getElementById('valorLavieen').value);
      const vUlt = parseFloat(document.getElementById('valorUltraformer').value);
      const atend = parseInt(document.getElementById('atendimentosPorDia').value);
      const dias = parseInt(document.getElementById('diasUsoMes').value);
      const ticket = parseFloat(document.getElementById('ticketMedio').value);

      const totalAtend = atend * dias;
      const faturamento = ticket * totalAtend;
      const marketing = faturamento * 0.1;
      const operacional = faturamento * 0.15;
      const royalties = faturamento * 0.05;

      const lucroLav = faturamento - (vLav + marketing + operacional + royalties);
      const lucroUlt = faturamento - (vUlt + marketing + operacional + royalties);

      const html = `
        <p><strong>Lavieen:</strong> ROI estimado: R$ ${lucroLav.toFixed(2)}</p>
        <p><strong>Ultraformer:</strong> ROI estimado: R$ ${lucroUlt.toFixed(2)}</p>
        <p><em>Faturamento bruto mensal estimado: R$ ${faturamento.toFixed(2)}</em></p>
        <p>Descontado: 10% marketing, 15% opera√ß√£o, 5% royalties.</p>
      `;

      document.getElementById('resultadoROI').innerHTML = html;
      proximaPagina(9);
    }
  </script>
